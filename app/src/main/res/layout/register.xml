            android:layout_height="40dp"
            android:text="发送验证"
            android:background="@color/send_verification"
            android:textColor="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            />
    </RelativeLayout>
    <RelativeLayout
