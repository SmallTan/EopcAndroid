<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backeground_grey">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/information_back"
        android:background="@color/white"
        >
        <Button
            android:id="@+id/information_back_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/single_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/information_back_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:textColor="#2c2c2c"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/information_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IFOX"
            android:textColor="@color/contents_text"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/information_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ifox@163.com"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            />
        <app.ifox.com.eopcandroid.customView.RoundImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/information_user_headimage"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:src="@mipmap/ic_launcher"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:id="@+id/information_relative_username"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="昵称"
            android:textColor="@color/contents_text"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/set_up_icon"
            android:layout_marginEnd="15dp"
            />
        <TextView
            android:id="@+id/information_user_setup_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="35dp"
            android:text="IFOX"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:id="@+id/information_relative_user_email"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="邮箱"
            android:textColor="@color/contents_text"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/set_up_icon"
            android:layout_marginEnd="15dp"
            />
        <TextView
            android:id="@+id/information_user_setup_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="35dp"
            android:text="ifox@163.com"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:id="@+id/information_relative_user_school"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="学校"
            android:textColor="@color/contents_text"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/set_up_icon"
            android:layout_marginEnd="15dp"
            />
        <TextView
            android:id="@+id/information_user_setup_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="35dp"
            android:maxEms="12"
            android:singleLine="true"
            android:text="@string/personal_information_introduce"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:id="@+id/information_relative_user_introduce"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="个人简介"
            android:textColor="@color/contents_text"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/set_up_icon"
            android:layout_marginEnd="15dp"
            />
        <TextView
            android:id="@+id/information_user_setup_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="35dp"
            android:maxEms="12"
            android:text="@string/my_love"
            />
    </RelativeLayout>

</LinearLayout>