<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/setup_back"
        android:background="@color/white"
        >
        <Button
            android:id="@+id/setup_back_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/single_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/setup_back_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textColor="#2c2c2c"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/setup_account"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号设置"
            android:textColor="@color/text_black"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            />
        <Button
            android:layout_width="20dp"
            android:layout_height="23dp"
            android:background="@mipmap/set_up_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_view"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
    <RelativeLayout
        android:id="@+id/setup_network_monitoring"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络监测"
            android:textColor="@color/text_black"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            />
        <Button
            android:layout_width="20dp"
            android:layout_height="23dp"
            android:background="@mipmap/set_up_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_view"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
    <RelativeLayout
        android:id="@+id/setup_share"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐给好友"
            android:textColor="@color/text_black"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            />
        <Button
            android:layout_width="20dp"
            android:layout_height="23dp"
            android:background="@mipmap/set_up_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_view"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
    <RelativeLayout
        android:id="@+id/setup_agreement"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用条款"
            android:textColor="@color/text_black"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            />
        <Button
            android:layout_width="20dp"
            android:layout_height="23dp"
            android:background="@mipmap/set_up_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_view"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
    <RelativeLayout
        android:id="@+id/setup_about"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:textColor="@color/text_black"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            />
        <Button
            android:layout_width="20dp"
            android:layout_height="23dp"
            android:background="@mipmap/set_up_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_view"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
    <RelativeLayout
        android:id="@+id/setup_version_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本更新"
            android:textColor="@color/text_black"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            />
        <Button
            android:layout_width="20dp"
            android:layout_height="23dp"
            android:background="@mipmap/set_up_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前已是最新版本"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="35dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_view"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
    <RelativeLayout
        android:id="@+id/setup_claer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清楚缓存"
            android:textColor="@color/text_black"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            />
        <Button
            android:layout_width="20dp"
            android:layout_height="23dp"
            android:background="@mipmap/set_up_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:id="@+id/setup_login_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:textColor="#ed0e0e"
            />

    </RelativeLayout>
</LinearLayout>